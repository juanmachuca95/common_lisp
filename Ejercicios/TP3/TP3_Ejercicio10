(defun tp3ejer10()
	(let (a)
		(write "moneda en pesos ARS$: ")
		(setq a(read))

		(if (numberp a)
			(setq DIVISAS (append (list(* 20 a)) (list(* 24 a)) (list(* 0.25 a)) ))
		)
	)	
)

dollar = 20; euro = 24; real = 0.25

